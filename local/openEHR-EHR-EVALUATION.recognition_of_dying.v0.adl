definition
	EVALUATION[at0000] matches {    -- Recognition of dying
		protocol matches {
			ITEM_TREE[at0001] matches {*}    -- Item tree
		}
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0035] occurrences matches {0..1} matches {    -- Assessment date and time
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
					ELEMENT[at0041] occurrences matches {0..1} matches {    -- Patient condition
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0042,    -- A last days of life diagnosis remains appropriate
									at0043]    -- Condition improved, so a last days of life diagnosis is now inappropriate
								}
							}
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Confirmed by
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- Consultant (responsible team)
									at0006,    -- ST3 and above or equivalent (responsible team)
									at0008,    -- Consultant (acute management)
									at0009]    -- ST3 and above or equivalent (acute management)
								}
							}
						}
					}
					ELEMENT[at0036] occurrences matches {0..1} matches {    -- Reviewer
						value matches {
							DV_CODED_TEXT matches {*}
						}
					}
					ELEMENT[at0048] occurrences matches {0..1} matches {    -- Is patient aware they are dying
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0049,    -- Yes
									at0050]    -- No
								}
							}
						}
					}
					ELEMENT[at0052] occurrences matches {0..1} matches {    -- Reason patient is unaware of their diagnosis
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0053,    -- Patient choice
									at0054]    -- Other
								}
							}
						}
					}
					ELEMENT[at0011] occurrences matches {0..1} matches {    -- Recognition of dying agreed with
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0012,    -- Yes
									at0013]    -- No
								}
							}
						}
					}
					ELEMENT[at0014] occurrences matches {0..1} matches {    -- Decision summary
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}

