									at0007]    -- No
								}
							}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {    -- Reason the patient is unaware of their diagnosis
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0009,    -- Patient choice
									at0010]    -- Other
								}
							}
						}
					}
					ELEMENT[at0011] occurrences matches {0..1} matches {    -- Topics discussed with the patient
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0012,    -- Communication has not been possible because of patient's condition
									at0013,    -- Patient did not want to discuss any aspects of their condition
