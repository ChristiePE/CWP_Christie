	EVALUATION[at0000] matches {    -- Care_in_Last_Days_of_Life
		data matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {    -- Bereavement risk assessment undertaken
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003,    -- Yes
									at0004]    -- No
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {    -- Is the patient aware that they are dying
